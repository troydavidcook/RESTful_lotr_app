<% include ./partials/header %>

<div class="ui grid">
    <div class="three column row centered">
        <h1 class="ui header">A Look at the Kings of Middle Earth</h1>
    </div>
<div class="ui main container segment">
    <% kings.forEach((king) => { %>
      <h3><%= king.name %></h3>
      <img src="<%= king.image %>" alt="">
      <p><%= king.created.toDateString() %></p>
      <p><%= king.description.substring(0, 100) %>...</p>
      <a class="add-new" href="/kings/<%= king._id %>">Read more..</a>
      <hr>
    <% }); %>
    <div add-new>
      <a class="ui button tiny green inverted" href="/kings/new">Add New King</a>
    </div>
</div>

<% include ./partials/header %>